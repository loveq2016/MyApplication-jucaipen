<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/video_lay"
        android:descendantFocusability="beforeDescendants"
        android:layout_height="@dimen/six_hundred_twenty_four">

        <com.example.view.media.QkVideoView
            android:id="@+id/qk_video"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            >
            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/viediofenxiang" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/viediocomeback" />
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#e0000000"
        android:id="@+id/rl_control"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_paly"
            android:background="@drawable/dj_bofang"/>


        <SeekBar
            android:id="@+id/video_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/seek_sele"
            android:maxHeight="4.0dp"
            android:layout_centerInParent="true"
            android:minHeight="4.0dp"
            android:layout_marginLeft="80dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:progressDrawable="@drawable/ui_sk_bar"
            android:max="1000"
            />



        <TextView
                android:id="@+id/tv_alltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                 android:paddingLeft="10dp"
                android:textSize="10sp"
            android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/video_progressbar"
                android:layout_below="@+id/video_progressbar"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_nowtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_alignRight="@+id/video_progressbar"
                android:layout_below="@+id/video_progressbar"
                android:text="00:00"
                android:paddingRight="16dp"
                android:textColor="@android:color/white" />

            <ImageButton
                android:id="@+id/btn_big"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/viedio_fangda" />
    </RelativeLayout>

    </RelativeLayout>


    <RadioGroup
        android:id="@+id/plant_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/intro_rad"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/Thirty"
            android:layout_marginRight="@dimen/Thirty"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_selecter"
            android:button="@null"
            android:gravity="center"
            android:text="简介"
            android:textColor="@drawable/live_color" />

        <RadioButton
            android:id="@+id/comm_rad"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/Thirty"
            android:layout_marginRight="@dimen/Thirty"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_selecter"
            android:button="@null"
            android:gravity="center"
            android:text="评论"
            android:textColor="@drawable/live_color" />
    </RadioGroup>

    <View
        android:id="@+id/view_videos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Thirty"
        android:visibility="gone"
        android:background="@color/cl_myback" />

    <android.support.v4.view.ViewPager
        android:id="@+id/plant_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
