<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Thirty"
        android:src="@drawable/wenzizhibo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/Thirty"
        android:layout_marginTop="@dimen/Thirty"
        android:layout_marginBottom="@dimen/Thirty"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tx_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Thirty"
            android:layout_marginRight="@dimen/Thirty"
            android:paddingBottom="@dimen/Thirty"
            android:text="2015-25-56"
            android:textColor="@android:color/holo_red_dark" />

        <LinearLayout
            android:id="@+id/liner_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cl_myback"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tx_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Thirty"
                android:layout_marginRight="@dimen/Thirty"
                android:src="@drawable/wenzi_lock" />

            <TextView
                android:id="@+id/tv_live_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twenty"
                android:text="财政将全部资金放不资金放进仓库不呢" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
