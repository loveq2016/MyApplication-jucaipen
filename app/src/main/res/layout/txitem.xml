<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Thirty"
        android:src="@drawable/wenzizhibo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/Thirty"
        android:layout_marginTop="@dimen/Thirty"
        android:layout_marginBottom="@dimen/Thirty"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tx_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Thirty"
            android:layout_marginRight="@dimen/Thirty"
            android:paddingBottom="@dimen/Thirty"
            android:textColor="#fd5561" />

        <LinearLayout
            android:id="@+id/liner_tx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tx_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Thirty"
                android:layout_marginRight="@dimen/Thirty"
                android:src="@drawable/wenzi_lock" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#f7f7f7"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:layout_height="match_parent">
            <WebView
                android:scrollbars="none"
                android:id="@+id/tv_live_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
