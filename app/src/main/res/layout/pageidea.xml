<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <ImageView
            android:id="@+id/for_picture"
            android:layout_width="@dimen/One_hundred"
            android:layout_height="@dimen/One_hundred"
            android:layout_marginLeft="@dimen/Thirty_two"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/rentou" />

        <TextView
            android:id="@+id/for_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/for_picture"
            android:layout_marginLeft="@dimen/Thirty_two"
            android:layout_toRightOf="@+id/for_picture"
            android:drawableRight="@drawable/vip"
            android:text="A4554 "
            android:textColor="#222"
            android:textSize="@dimen/Thirty_six" />


        <ImageView
            android:id="@+id/iv_ispay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/for_name"
            android:layout_margin="@dimen/Thirty" />

        <TextView
            android:id="@+id/for_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/for_picture"
            android:layout_below="@+id/for_name"
            android:layout_marginLeft="@dimen/Thirty_two"
            android:layout_toRightOf="@+id/for_picture"
            android:text="资审投资人"
            android:textColor="#aaa"
            android:textSize="@dimen/Thirty_two" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/Thirty_two"
        android:orientation="vertical"
        android:paddingBottom="@dimen/Forty_four">

        <TextView
            android:id="@+id/for_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Thirty"
            android:layout_marginRight="@dimen/Thirty"
            android:drawableLeft="@drawable/mingshi_guandian"
            android:text="超级主力进场"
            android:textColor="@color/cl_sex" />

        <TextView
            android:id="@+id/for_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Thirty_two"
            android:layout_marginRight="@dimen/Thirty_two"
            android:layout_marginTop="@dimen/Thirty"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="记得有这样一段话：时光静好，与君语；细水流年，与君同；繁华落尽，与君老。静好的时光里，小城市，总是有一个人，渡你一生的回忆。有人说，一个人最好记性不要太好，因为回忆越多，幸福感越少。"
            android:textColor="#555"
            android:textSize="@dimen/thirty_four" />

        <TextView
            android:id="@+id/for_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/for_name"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/Thirty"
            android:layout_marginTop="@dimen/Thirty"
            android:text="2016-02-21"
            android:textColor="#aaa"
            android:textSize="@dimen/Thirty_two" />
    </LinearLayout>

    <View
        android:id="@+id/solid"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/problem"
        android:background="#aaaaaa"></View>

</RelativeLayout>